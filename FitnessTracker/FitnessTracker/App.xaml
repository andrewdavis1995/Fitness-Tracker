<Application x:Class="FitnessTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FitnessTracker"
             StartupUri="HomePage.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="TextColour">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundColour">#5B0B33</SolidColorBrush>
        <SolidColorBrush x:Key="ControlColour">#249EA3</SolidColorBrush>

        <SolidColorBrush x:Key="ExerciseColour_Arm">#223388</SolidColorBrush>
        <SolidColorBrush x:Key="ExerciseColour_Core">#249EA3</SolidColorBrush>
        <SolidColorBrush x:Key="ExerciseColour_Chest">#FF595E</SolidColorBrush>
        <SolidColorBrush x:Key="ExerciseColour_Leg">#31C341</SolidColorBrush>
        <SolidColorBrush x:Key="ExerciseColour_Cardio">#E84C86</SolidColorBrush>

        <FontFamily x:Key="Roboto Thin">pack://application:,,,/Fonts/#Roboto Light</FontFamily>
        <FontFamily x:Key="Roboto">pack://application:,,,/Fonts/#Roboto</FontFamily>

    </Application.Resources>
</Application>
