<UserControl x:Class="FitnessTracker.Controls.Display_Workout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessTracker.Controls" FontFamily="{StaticResource Roboto Thin}"
             mc:Ignorable="d" Background="{StaticResource ControlColour}" FontWeight="Bold"
             d:DesignHeight="220" d:DesignWidth="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtWorkoutName" Text="Workout Name" FontSize="16" Margin="5" Foreground="{StaticResource TextColour}" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
