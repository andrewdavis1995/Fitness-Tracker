<ComboBoxItem x:Class="MoneyMatters.Controls.CustomComboBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyMatters.Controls"
              FontFamily="{StaticResource Roboto}"
             HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
             mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             Height="50" d:DesignWidth="800" Margin="0" Style="{StaticResource HoverFormat}">
    <Border Background="#00000000" CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" Name="colIcon"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Name="brdIcon" Width="25" Height="25" Margin="2" BorderThickness="0" CornerRadius="20" Background="White" RenderOptions.BitmapScalingMode="HighQuality"/>
            <Label Name="lblContent" VerticalAlignment="Center" Content="White" FontSize="14" Foreground="White" Margin="2" Grid.Column="1"/>
        </Grid>
    </Border>
</ComboBoxItem>