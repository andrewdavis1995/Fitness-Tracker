<UserControl x:Class="MoneyMatters.Controls.LHS_Option"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyMatters.Controls"
             mc:Ignorable="d" 
             Height="60" d:DesignWidth="60" Padding="0, 1, 1, 1">
    <Border BorderThickness="0, 0, 0, 0" BorderBrush="White" Background="Transparent" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseLeftButtonDown="Border_MouseLeftButtonDown" CornerRadius="4">
        <Grid>
            <Border Name="SelectedBackground" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{StaticResource ButtonSelected}" Visibility="Collapsed" CornerRadius="0, 4, 4, 0" BorderBrush="{StaticResource ButtonHighlight}" BorderThickness="3, 0,0 ,0"/>
            <Border Name="HoverPopup" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{StaticResource ButtonHighlight}" Opacity="0.25" Visibility="Collapsed" CornerRadius="4"/>
            <Image Name="imgIcon" RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/LHS_Icons/List.png" Height="40" Width="40"/>
        </Grid>
    </Border>
</UserControl>