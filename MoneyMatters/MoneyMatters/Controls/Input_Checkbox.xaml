<UserControl x:Class="MoneyMatters.Controls.Input_Checkbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyMatters.Controls"
             mc:Ignorable="d" 
             Foreground="{StaticResource ControlColour}"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid MouseLeftButtonDown="imgSwitch_MouseLeftButtonDown" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Name="cmdCheck" Width="20" BorderBrush="{StaticResource ControlColour}" IsHitTestVisible="False" Height="20" BorderThickness="3" CornerRadius="5" Margin="5">
            <Image x:Name="imgTick" Source="/Images/Icons/tick.png" Visibility="Hidden" IsHitTestVisible="False"/>
        </Border>

        <TextBlock Name="txtCaption" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" Text="Message" Grid.Column="1" FontSize="12"/>
    </Grid>
</UserControl>
